@import url("PageBuilderCustom.less");

/*@PageBuilderGridColumns: 12;
@PageBuilderGridGutterWidth:    2.127659574%;

//the grid column width is 100% minus the cutter times colums minus one, divided by columns. 
//Cutter width is fixed to same percentage
@PageBuilderGridColumnWidth:    (100%-(@PageBuilderGridGutterWidth * (@PageBuilderGridColumns - 1))) / @PageBuilderGridColumns;*/

@MediumGridName: md;
@SmallGridName: sm;
@NoWrapGridName: xs;

    .colWidth (@columns) {
      width: (@PageBuilderGridColumnWidth * @columns) + (@PageBuilderGridGutterWidth * (@columns - 1));
    }

    .generate_columns (@index, @gridSize) when (@index > 0) {
      html .pageBuilderLayout .row .col-@{gridSize}-@{index} { 
		  .colWidth(@index); 
      }
      .generate_columns(@index - 1, @gridSize);
    }

