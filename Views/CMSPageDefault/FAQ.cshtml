						<li><a href="#">CRM for CIC</a></li>
						<li><a class="current" href="#">Scholarships</a></li>
					</ul>
				</div>

				@if (faqs.Any())
				{
					<div class="col-xs-12 col-sm-8">
					@foreach (var faq in faqs)
					{
						<div class="faq-container">
							<div class="faq-trigger active">@Html.Raw(faq.GetElementValue("Question"))</div>
							<div class="faq-answer">
								@Html.Raw(faq.GetElementValue("Answer"))
							</div>
						</div>
					}
					</div>
				}
				

